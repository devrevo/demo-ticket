{% extends 'adminbase.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    </br>
    <div class="center-div">
       <label for="exampleSelect1">Etat Ticket :</label>

       <form method="post" name="etats">
       <select class="form-control" name="mySelect" onChange="this.form.submit()">
            <option disabled selected value> -- select an option -- </option>
            {% for etat in etats %}
                <option value="{{ etat.titre }}">{{ etat.titre }}</option>
            {% endfor %}
      </select>
       
      </form>
    </div>
     <table style="margin-top : 30px;padding: 2px;" class="table table-hover">
            <thead>
              <tr class="table-primary">
                <th scope="col">Titre</th>
                <th scope="col">Nom Client</th>
                <th scope="col">Categorie</th>
                <th scope="col">Etat</th>
                <th scope="col">Date de creation</th>
                <th></th>
              </tr>
              </thead>
              <tbody style="background-color : white;">
              {% for ticket in tickets %}

                  <tr style="font-color = Black;" >
                    <td>
                      {{ ticket.title }}
                    </td>
                    <td>
                      {{ ticket.client.Nom }} {{ ticket.client.Prenom }}
                    </td>
                    <td>
                      {{ ticket.Categorie }}
                    </td>
                    <td>
                      {{ ticket.EtatTicket  }}
                    </td>
                    <td >
                      {{ ticket.createdAt | date('Y-m-d H:i')}}
                    </td>
                    <td>
                      <button class="btn btn-secondary">
                        <a href="{{ path('ticketinf',{'id': ticket.id }) }}" >
                            Edit
                        </a>
                      </button>
                    </td>
                  </tr>

              {% endfor %}
              <tbody>
              </table>
{% endblock %}